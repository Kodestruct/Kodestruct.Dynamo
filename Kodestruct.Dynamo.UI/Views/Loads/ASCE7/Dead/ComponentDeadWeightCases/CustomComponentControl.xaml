<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   x:Class="KodestructDynamoUI.Views.Loads.ASCE7.CustomComponentControl"
    mc:Ignorable="d"
    d:DesignHeight="30" d:DesignWidth="800">

    <Grid x:Name="LayoutRoot" Width="700" >
        <Grid HorizontalAlignment="Stretch">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300"/>
                <ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>
			<Grid Margin="20,5,0,5" Grid.Column="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="90"/>
					<ColumnDefinition Width="1*"/>
				</Grid.ColumnDefinitions>
				<TextBlock TextWrapping="Wrap" Text="Description" VerticalAlignment="Center" Margin="0,2" FontFamily="Segoe UI Light" FontSize="12"/>
                <TextBox TextWrapping="Wrap" Text="{Binding CustomDescription, Mode=TwoWay}" Grid.Column="1" Margin="0,0,12,0" FontFamily="Segoe UI Light" FontSize="12"/>
			</Grid>
            <Grid>

            </Grid>

		</Grid>

	</Grid>
</UserControl>
